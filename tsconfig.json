{
	"compilerOptions": {
		"outDir": "dist/",
		"target": "ESNext",
		"module": "commonjs",
		"sourceMap": true,
		"declaration": true,
		"noImplicitAny": false,
		"removeComments": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
	},
	"include": ["src/*"],
	"exclude": ["node_modules/*"]
}